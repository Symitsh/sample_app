<% provide(:title, "log in") %>
<h1>Connection</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :"mot de passe"%>
      <%= link_to "(mot de passe oubliÃ©)", new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Se souvenir de moi</span>
      <% end %>

      <%= f.submit "Connexion", class: "btn btn-primary" %>
    <% end %>

    <p>Nouvel utilisateur? <%= link_to "S'inscrire maintenant!", signup_path %></p>
  </div>
</div>
